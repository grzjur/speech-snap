# SpeechSnap Configuration

# Whisper STT
WHISPER_LANGUAGE="pl"
# GPU model (requires CUDA)
WHISPER_MODEL="large-v3"
# CPU fallback model
WHISPER_MODEL_CPU="base"
WHISPER_BEAM_SIZE=5
WHISPER_VAD_FILTER=true

# Audio
AUDIO_SAMPLERATE=16000
AUDIO_CHANNELS=1
AUDIO_BLOCKSIZE=1024
AUDIO_GAIN=2.0
MIN_RECORDING_DURATION=1.5

# PTT Key (see: evdev key codes)
PTT_KEY="KEY_RIGHTCTRL"
# Delay before Ctrl+V paste (seconds).
# PASTE_DELAY=0.3     # manual override, disables auto-detection
# RDP_PASTE_DELAY=0.3 # delay used when Remmina RDP session is auto-detected

# Logging
LOG_LEVEL="INFO"
